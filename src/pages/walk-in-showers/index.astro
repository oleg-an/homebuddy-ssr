---
import Layout from '../../layouts/Layout.astro';
import Reviews from '../../components/Reviews.astro';
import PhotoGallery from '../../components/PhotoGallery.astro';
import type { PhotoGalleryModel } from '../../api/models';
import { GetEstimate } from './GetEstimate';
import { reviewsList } from '../../api/reviews';

const photoGalleryItems: PhotoGalleryModel[] = [
  { image: '/photo-gallery/gallery-1-desktop.jpg' },
  { image: '/photo-gallery/gallery-2-desktop.jpg' },
  { image: '/photo-gallery/gallery-3-desktop.jpg' },
  { image: '/photo-gallery/gallery-4-desktop.jpg' },
  { image: '/photo-gallery/gallery-5-desktop.jpg' }
];
---
<Layout title="Title">
  <div class="container p-4">
    <GetEstimate client:load/>
  </div>
  <Reviews items={reviewsList}/>
  <div class="h-[100px]"></div>
  <PhotoGallery items={photoGalleryItems}></PhotoGallery>
</Layout>